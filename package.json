{
  "name": "mattv",
  "packageManager": "yarn@4.5.2",
  "scripts": {
    "api:start": "ts-node --project tsconfig.json -r tsconfig-paths/register src/api/server.ts",
    "api:dev": "nodemon src/api/server.ts",
    "admin:dev": "yarn workspace admin dev",
    "program-records:generate": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/programRecord/programRecordGenerate.ts",
    "program-records:purge": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/programRecord/programRecordPurge.ts",
    "segments:generate": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/mediaSegment/mediaSegmentGenerate.ts",
    "media:check": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/media/mediaCheck.ts",
    "media:register": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/media/mediaRegister.ts",
    "media:delete": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/media/mediaDelete.ts",
    "upload:media:segments": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/upload/uploadMediaWithMediaSegments.ts",
    "upload:media:segments:bulk": "ts-node --project tsconfig.json -r tsconfig-paths/register src/core/functions/upload/uploadMediaWithMediaSegmentsBulk.ts"
  },
  "workspaces": [
    "src/admin",
    "src/api",
    "src/broady",
    "src/core"
  ],
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "bonjour": "^3.5.0",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bonjour": "^3",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.17",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
