{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@constants": ["./src/constants.ts"],
      "@core/*": ["./src/core/*"],
      "@broady/*": ["./src/broady/*"],
      "@admin/*": ["./src/admin/*"],
      "@api/*": ["./src/api/*"],
      "@public/*": ["./public/*"],
    }
  },
  "exclude": [
    "input-files",
    "public",
  ]
}
